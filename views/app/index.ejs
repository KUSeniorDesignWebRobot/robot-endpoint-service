<!DOCTYPE html>

<html lang="en">

  <% include ../partials/header %>

    <body>
      <div class="container">

        <div class="row">
          <div class="col-md-6 right-border-line">
            <h2>Robots</h2>
            <div>
              <% if (robots.length === 0) { %>
                <p>
                  No robots found
                </p>
              <% } else { %>
                <div class="list-group">
                  <% for (robot of robots) { %>
                    <% if (robot.active) { %>
                      <a class="list-group-item active" href=<%= "/app/session/" + robot.id %>>
                        <%= robot.name %>
                      </a>
                    <% } else { %>
                      <div href="javascript:void();" class="list-group-item disabled">
                        <%= robot.name %>
                      </div>
                    <% } %>
                  <% } %>
                </div>

              <% } %>

              <div class="panel-body"></div>
            </div>
          </div>
          <div class="col-md-6">
            <form action="/app/robot" method="post">
              <h3>Register a Robot</h3>
              <div class="form-group">
                <label for="name-field">Name:</label>
                <input id="name-field" class="form-control" type="text" name="name">
              </div>
              <div class="form-group">
                <label for="id-field">Robot Id:</label>
                <input id="id-field" class="form-control" type="text" name="id">
              </div>
              <div>
                <input type="submit" value="Register" class="btn btn-primary"/>
              </div>
            </form>
          </div>
        </div>
      </div>
    </body>

  </html>
