<!DOCTYPE html>

<html lang="en">
<script>
  const robot = <%- JSON.stringify(robot) %>;
</script>

<% include ../partials/header-app %>

  <body>

    <div class="container" ng-app="myApp" ng-controller="demo">
      <h1>Robot Session: <%= robot.name %> </h1>

      <hr/>

      <div class="control-container row">
        <div class="control-wrapper col-md-3" ng-repeat="control in controls">
          <p>{{control.description}}</p>
          <rzslider rz-slider-model="control.value" rz-slider-options="control.options"></rzslider>
        </div>
      </div>
    </div>

    <hr/>
    <rzslider rz-slider-model="slider.value" rz-slider-options="slider.options"></rzslider>

  </body>

</html>
